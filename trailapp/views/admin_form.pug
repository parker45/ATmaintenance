extends layout
block extraHeader
  link(rel='stylesheet', href='stylesheets/admin.css')
  link(rel='stylesheet', href='stylesheets/admin_form.css')
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(type='text/javascript', src='javascript/admin_form.js')
block content
  section.wrapper
    ul.column_list
      li.form
        form(action='#', id="task_form")
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            input(type='text', name='title', value='', id="title").mdl-textfield__input
            label(for="title").mdl-textfield__label Title
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              textarea(type='text', rows='5', id='description').mdl-textfield__input
              label(for='description').mdl-textfield__label Description
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            input(type='date', name='date', value='', id="date").mdl-textfield__input
            label(for="date").mdl-textfield__label Date
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              select(id='priority', name='priority').mdl-textfield__input
                option(hidden disabled selected value)
                option(value='easy').easy Easy
                option(value='medium').medium Medium
                option(value='hard').hard Hard
                option(value='epic').epic Epic
              label(for='priority').mdl-textfield__label Priority
          div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              select(id='trip', name='trip').mdl-textfield__input
                option(hidden disabled selected value)
                option(value='a') Trip A
                option(value='b') Trip B
                option(value='c') Trip C
                option(value='d') Trip D
              label(for='trip').mdl-textfield__label Trip
        button(type='submit', form='task_form', value='Submit').mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.submit_task_button Submit Task
      li.images.scrollable_list
        div.list_title
          h2 Images
          button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.add_image_button Add Image
        ul.list_container
          li.image_card.mdl-card.mdl-shadow--2dp
            div.mdl-card__title.mdl-card--expand
            div.mdl-card__actions
              span.image_card__filename Image1.jpg
          li.image_card.mdl-card.mdl-shadow--2dp
            div.mdl-card__title.mdl-card--expand
            div.mdl-card__actions
              span.image_card__filename Image2.jpg
          li.image_card.mdl-card.mdl-shadow--2dp
            div.mdl-card__title.mdl-card--expand
            div.mdl-card__actions
              span.image_card__filename Image3.jpg
          li.image_card.mdl-card.mdl-shadow--2dp
            div.mdl-card__title.mdl-card--expand
            div.mdl-card__actions
              span.image_card__filename Image4.jpg
      button(type='submit', form='task_form', value='Submit').mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.submit_task_button_narrow Submit Task
