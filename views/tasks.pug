extends layout
block extraHeader
    link(rel='stylesheet', href='/stylesheets/tasks.css')
    link(rel='stylesheet', href='/stylesheets/other_task.css')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
    script(type='text/javascript', src='/javascripts/tasks.js')
block content
  section.wrapper
    div.scrollable_list.tasks
      div.list_title
        h2 Tasks
        i.fas.fa-inbox
      div.list_container
        ul.card_list
          each task in data.task_list
              if task.priority=='1'
                li.card_item.card_tag--low
                  h3.short_desc #{task.title}
                  h3.card_location #{task.location}
                  br
                  if task.type=='Recurring'
                    i.fas.fa-calendar-alt.recurring_i
                  h3.card_date #{task.due_date}
                  h3.card_trip #{task.trip_id}
                  br
                  div.topBox
                    p.card_description #{task.description}
                  br
                  div.bottomBox
                    button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.task_button.card_add Add to trip
                    a(href='database/task/'+task.id).mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.task_button.card_more More info  
              else if task.priority=='2'
