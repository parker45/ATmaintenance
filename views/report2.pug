extends layout
block extraHeader
  link(rel='stylesheet', href='/stylesheets/report.css')
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
  script(src='/javascripts/report.js')
block content
  .mdl-grid
    .mdl-cell.mdl-cell--12-col
        h4 What Did You Encouter?
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-tree
            .mdl-card__title.mdl-card--expand(id="tree")
                h4.mdl-card__title-text Fallen Tree
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-campground
            .mdl-card__title.mdl-card--expand(id="shelter")
                h4.mdl-card__title-text Shelter Maintenance
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-trash-alt
            .mdl-card__title.mdl-card--expand(id="garbage")
                h4.mdl-card__title-text Garbage
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-hiking
            .mdl-card__title.mdl-card--expand(id="trail")
                h4.mdl-card__title-text Trail Work
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-brush
            .mdl-card__title.mdl-card--expand(id="blaze")
                h4.mdl-card__title-text Trail Blazing
    .mdl-cell.mdl-cell--4-col.mdl-cell--2-col-phone
        .demo-card-square.mdl-card.mdl-shadow--2dp
            i.fas.fa-question-circle
            .mdl-card__title.mdl-card--expand(id="other")
                h4.mdl-card__title-text Other
    .mdl-cell.mdl-cell--6-col
        .demo-card-square.mdl-card.mdl-shadow--2dp
            .mdl-card__title.mdl-card--expand(id="images")
                h2.mdl-card__title-text Add Images
            .mdl-card__supporting-text
                | Add any additional Images.
            .mdl-card__actions.mdl-card--border
                label.input-custom-file.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored
                    | ADD IMAGES
                    input(type='file') 
    .mdl-cell.mdl-cell--6-col
        .demo-card-square.mdl-card.mdl-shadow--2dp
            .mdl-card__title.mdl-card--expand(id="description")
                h2.mdl-card__title-text Addtional Description
            .mdl-card__supporting-text
                | Add any additional information.
            .mdl-card__actions.mdl-card--border
                .mdl-textfield.mdl-js-textfield
                    textarea#description-input.mdl-textfield__input(type='text', rows='2')
                    label.mdl-textfield__label(for="description-input") Input Here... 
    .mdl-cell.mdl-cell--12-col
        .center-align
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored(id="submit-btn")
                | Submit                           